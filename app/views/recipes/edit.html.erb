<div class="contents row">
    <%= form_tag("/recipes/#{@recipe.id}", method: :patch ) do %>
      <h3>
        編集する
      </h3>
      <input placeholder="Image Url" type="text" name="image" value="<%= @recipe.image %>" autofocus="true">
      <textarea cols="30" name="text" placeholder="text" rows="10"><%= @recipe.text %></textarea>
      <input type="submit" value="SENT">
    <% end %>
  </div>
