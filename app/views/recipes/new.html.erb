<%= form_tag({action: :create}, multipart: true) do %>
  <%= file_field_tag  :image %>
  <%= text_field :recipe, :title %>
  <%= text_field :recipe, :text %>
  <%= text_field :recipe, :foods %>

  <% ["ご飯","トースト","パスタ","お餅","その他"].each do |item| %>
    <label>
      <%= check_box_tag 'sample_form[genre][]', item %>
      <%= item %>
  <% end %>
  <%= submit_tag "投稿する"  %>
<% end %>
