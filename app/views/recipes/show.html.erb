<div class="contents row" >
  <% if user_signed_in? && current_user.id == @recipe.user_id %>
    <div class="more">
      <span><%= image_tag 'arrow_top.png' %></span>
    <ul class="more_list">
      <li>
        <%= link_to '編集', "/recipes/#{@recipe.id}/edit", method: :get %>
      </li>

      <li>
        <%= link_to '削除', "/recipes/#{@recipe.id}", method: :delete %>
      </li>
    </ul>
    </div>
  <%end %>

  <span>投稿者 </span><%= @recipe.user.nickname %>

  <div class="container">
    <% if current_user %>
      <%= form_tag("/recipes/#{@recipe.id}/comments", method: :post) do %>
        <textarea cols="30" name="text" placeholder="コメントする" rows="2"></textarea>
        <input type="submit" value="SENT">
      <% end %>
    <% end %>

  <%= render partial: "like", locals: { recipe: @recipe } %>

    <div class="comments">
      <h4>＜コメント一覧＞</h4>
      <% if @comments %>
        <% @comments.each do |comment| %>
          <p>
            <strong><%= link_to comment.user.nickname, "/users/#{comment.user_id}" %>：</strong>
            <%= comment.text %>
          </p>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
