<div class="posts">
  <h2><%= @recipe.title %></h2>
  <p><%= @recipe.foods %></p>
  <div class="img_user">
    <%= image_tag @recipe.image %>
    <% if user_signed_in? && current_user.id == @recipe.user_id %>
      <div class="more">
        <ul>
          <li><%= link_to '編集', "/recipes/#{@recipe.id}/edit", method: :get %></li>
        </ul>
      <% end %>
      </div>

      <% if user_signed_in? && current_user.id == @recipe.user_id %>
      <div class="moremore">
        <ul>
          <li><%= link_to '削除', "/recipes/#{@recipe.id}", method: :delete %></li>
        </ul>
      <%end %>
      </div>
    <p>投稿者 <%= link_to @recipe.user.nickname, "/users/#{@recipe.user_id}" %> さん</p>
  </div>
  <p>レシピ：<%= @recipe.text %></p>
</div>

<% if current_user %>
  <div class="comment_text">
  <%= render partial: "like", locals: { recipe: @recipe } %>
  <%= form_tag("/recipes/#{@recipe.id}/comments", method: :post) do %>
    <textarea name="text" placeholder="コメントする"></textarea>
    <input type="submit" value="送信">
    <% end %>
  </div>
<% end %>

<div class="comments">
  <h3>＜コメント一覧＞</h3>
  <% if @comments %>
    <% @comments.each do |comment| %>
      <p>
        <strong><%= link_to comment.user.nickname, "/users/#{comment.user_id}" %>：</strong>
        <%= comment.text %>
      </p>
    <% end %>
  <% end %>
</div>
