<% if user_signed_in? %>
  <% if recipe.like_user(current_user.id) %>
    <%= button_to recipe_like_path(like, recipe_id: recipe.id), method: :delete, id: "like-button", remote: true do %>
      <%= image_tag("icon_red_heart.svg") %>
      <span>
        <%= recipe.likes_count %>
      </span>
    <% end %>
  <% else %>
    <%= button_to recipe_likes_path(recipe), id: "like-button", remote: true do %>
      <%= image_tag("icon_heart.svg") %>
      <span>
        <%= recipe.likes_count %>
      </span>
    <% end %>
  <% end %>
<% else %>
  <%= image_tag("icon_heart.svg") %>
    <span>
      <%= recipe.likes_count %>
    </span>
<% end %>